{
  "name": "CLA Styles",
  "version": "0.0.2",
  "manifest_version": 2,
  "description": "Apply the conscript fonts to tagged text for Arxidian conlangs",
  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*" ],
      "exclude_matches": [ "https://github.com/*" ],
      "js": [ "script.js" ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "kardinal.woff",
    "farf.woff"
  ],
  "update_url": "https://github.com/qothr/chrome-cla-styles-rx/blob/master/update.xml"
}
